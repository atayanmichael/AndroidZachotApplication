<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.lenovo.androidzachotapplication.ui.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B5E20" />

    <com.example.lenovo.androidzachotapplication.ui.view.TabsView
        android:id="@+id/tabs_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E8F5E9"
        android:orientation="horizontal"
        app:selectedTabColor="#1B5E20"
        app:textColor="#E8F5E9" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
